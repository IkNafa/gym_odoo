<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="gym_weighing_view_tree" model="ir.ui.view">
            <field name="name">gym.weighing.view.tree</field>
            <field name="model">gym.weighing</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date"/>
                    <field name="weight"/>
                    <field name="measurement_method"/>
                </tree>
            </field>
        </record>
    
        <record id="gym_weighing_view_form" model="ir.ui.view">
            <field name="name">gym.weighing.view.form</field>
            <field name="model">gym.weighing</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Publish" name="publish" type="object" class="oe_highlight" attrs="{'invisible':[('id','=',False)]}"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
                        <div class="oe_title">
                            <h5><field name="date" placeholder="Date"/></h5>
                            <h5><field name="weight"/></h5>
                            <h5><field name="height"/></h5>
                        </div>
                        <group>
                            <field name="measurement_method"/>
                        </group>
                        <group string="Skin Fold" attrs="{'invisible':[('measurement_method','!=','fold')]}">
                            <group>
                                <field name="bicep_skinfold"/>
                                <field name="tricep_skinfold"/>
                                <field name="shoulder_skinfold"/>
                                <field name="subillacres_skinfold"/>
                            </group>
                        </group> 
                        <group string="Impedance Scale" attrs="{'invisible':[('measurement_method','!=','impedance')]}">
                            <group>
                                <field name="body_fat"/>
                                <field name="muscle_mass"/>
                                <field name="bmi"/>
                                <field name="visceral_fat"/>
                                <field name="basal_metabolism"/>
                                <field name="bone_mass"/>
                                <field name="water_percentage"/>
                                <field name="proteins"/>
                            </group>
                        </group> 
                    </sheet>
                </form>
            </field>
        </record>
    
        <record id="gym_weighing_view_graph" model="ir.ui.view">
            <field name="name">gym.weighing.view.graph</field>
            <field name="model">gym.weighing</field>
            <field name="arch" type="xml">
                <graph string="Weighing" type="bar">
                    <field name="date" interval="day" type="col"/>
                    <field name="weight" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="gym_weighing_progress_action_server" model="ir.actions.server">
            <field name="name">Progress</field>
            <field name="model_id" ref="model_gym_weighing"/>
            <field name="state">code</field>
            <field name="code">action = model.open_my_progress()</field>
        </record>

        <menuitem
            id="progress_menu"
            name="Progress"
            action="gym_weighing_progress_action_server"
            groups="gym_base.group_gym_individual"
            parent="gym_base.you_root_menu"
            sequence="10"/>

    </data>
    

</odoo>
