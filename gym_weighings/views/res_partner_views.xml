<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="res_form_view_form" model="ir.ui.view">
            <field name="name">res.partner.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="gym_base.res_partner_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="open_user_weighings" type="object" class="oe_stat_button" icon="fa-users" attrs="{'invisible':[('is_company','=',True)]}">
                        <field name="weighing_count" string="Weighings" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
