<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="res_partner_change_pass_wizard_view_form" model="ir.ui.view">
            <field name="name">res.partner.change.pass.wizard.view.form</field>
            <field name="model">res.partner.change.pass.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="user_id" invisible="1"/>
                            <field name="password" password="1"/>
                            <field name="rep_password" password="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Change password" name="change_password" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    
    </data>
    

</odoo>
