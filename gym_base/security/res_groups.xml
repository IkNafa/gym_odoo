<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="gym_category" model="ir.module.category">
        <field name="name">GYM</field>
    </record>

    <record id="group_gym_account" model="res.groups">
        <field name="name">Account</field>
        <field name="category_id" ref="gym_category"/>
    </record>

    <record id="group_gym_individual" model="res.groups">
        <field name="name">Individual</field>
        <field name="category_id" ref="gym_category"/>
        <field name="implied_ids" eval="[(4, ref('group_gym_account'))]"/>
    </record>

    <record id="group_gym_client" model="res.groups">
        <field name="name">Client</field>
        <field name="category_id" ref="gym_category"/>
        <field name="implied_ids" eval="[(4, ref('group_gym_individual'))]"/>
    </record>
   
    <record id="group_gym_trainer" model="res.groups">
        <field name="name">Trainer</field>
        <field name="category_id" ref="gym_category"/>
        <field name="implied_ids" eval="[(4, ref('group_gym_individual'))]"/>
    </record>

    <record id="group_gym_company" model="res.groups">
        <field name="name">Company</field>
        <field name="category_id" ref="gym_category"/>
        <field name="implied_ids" eval="[(4, ref('group_gym_account'))]"/>
    </record>

    <record id="group_gym_club" model="res.groups">
        <field name="name">Club</field>
        <field name="category_id" ref="gym_category"/>
        <field name="implied_ids" eval="[(4, ref('group_gym_company'))]"/>
    </record>
    
    <record id="group_gym_shop" model="res.groups">
        <field name="name">Shop</field>
        <field name="category_id" ref="gym_category"/>
        <field name="implied_ids" eval="[(4, ref('group_gym_company'))]"/>
    </record>

</odoo>
