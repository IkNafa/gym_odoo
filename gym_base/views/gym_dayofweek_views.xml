<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="gym_dayofweek_view_tree" model="ir.ui.view">
            <field name="name">gym.dayofweek.view.tree</field>
            <field name="model">gym.dayofweek</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="index"/>
                    <field name="name"/>
                    <field name="abbreviation"/>
                </tree>
            </field>
        </record>

        <record id="gym_dayofweek_action" model="ir.actions.act_window">
            <field name="name">Days of week</field>
            <field name="res_model">gym.dayofweek</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            id="dayofweek_menu"
            name="Days of week"
            action="gym_dayofweek_action"
            parent="config_extra_root_menu"
            sequence="10"/>
    
    </data>
    

</odoo>
