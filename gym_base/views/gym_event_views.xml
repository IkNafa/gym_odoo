<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="gym_event_view_form" model="ir.ui.view">
        <field name="name">gym.event.view.form</field>
        <field name="model">gym.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="type" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="gym_event_view_calendar" model="ir.ui.view">
        <field name="name">gym.event.view.calendar</field>
        <field name="model">gym.event</field>
        <field name="arch" type="xml">
            <calendar date_start="date_start" color="type" date_stop="date_stop" mode="month" quick_add="false">
                <field name="type"/>
            </calendar>
        </field>
    </record>

    <record id="gym_event_action_server" model="ir.actions.server">
        <field name="name">gym_event_action_server</field>
        <field name="model_id" ref="model_gym_event"/>
        <field name="binding_model_id" ref="model_gym_event"/>
        <field name="state">code</field>
        <field name="code">action = model.open_my_calendar()</field>
    </record>

    <menuitem
        id="calendar_menu"
        name="My Calendar"
        action="gym_event_action_server"
        groups="gym_base.group_gym_individual"
        parent="gym_base.you_root_menu"
        sequence="10"/>

</odoo>
