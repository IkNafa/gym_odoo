<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="only_view_my_surveys" model="ir.rule">
        <field name="name">only_view_my_surveys</field>
        <field name="model_id" ref="model_gym_survey"/>
        <field name="domain_force">[('client_id','=',user.partner_id.id)]</field>
        <field name="groups" eval="[(4,ref('gym_base.group_gym_individual'))]" />
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="only_view_my_surveys_trainer" model="ir.rule">
        <field name="name">only_view_my_surveys_trainer</field>
        <field name="model_id" ref="model_gym_survey"/>
        <field name="domain_force">['|',('partner_id','=',user.partner_id.id),('client_id','=',user.partner_id.id)]</field>
        <field name="groups" eval="[(4,ref('gym_base.group_gym_trainer'))]" />
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

</odoo>
