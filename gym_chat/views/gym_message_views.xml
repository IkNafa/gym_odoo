<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="gym_message_view_tree" model="ir.ui.view">
            <field name="name">gym.message.view.tree</field>
            <field name="model">gym.message</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="datetime" readonly="1"/>
                    <field name="datetime_relative_str" readonly="1"/>
                    <field name="from_id" readonly="1" />
                    <field name="to_id"/>
                    <field name="message"/>
                </tree>
            </field>
        </record>

        <record id="gym_message_action_server" model="ir.actions.server">
            <field name="name">Chat</field>
            <field name="model_id" ref="model_report_gym_message_report"/>
            <field name="binding_model_id" ref="model_report_gym_message_report"/>
            <field name="state">code</field>
            <field name="code">action = model.button_export_html()</field>
        </record>

        <record id="gym_message_action" model="ir.actions.act_window">
            <field name="name">Chat</field>
            <field name="res_model">gym.message</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            id="gym_message_menu_list"
            name="Chat-list"
            action="gym_message_action"
            groups="gym_base.group_gym_account"
            parent="gym_base.gym_menu"
            sequence="71"/>

        <menuitem
            id="gym_message_menu"
            name="Chat"
            action="gym_message_action_server"
            groups="gym_base.group_gym_account"
            parent="gym_base.gym_menu"
            sequence="70"/>

        
    
    </data>
    

</odoo>
