<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="only_my_messages" model="ir.rule">
        <field name="name">only_my_messages</field>
        <field name="model_id" ref="model_gym_message"/>
        <field name="domain_force">['|',('from_id','=',user.partner_id.id),('to_id','=',user.partner_id.id)]</field>
        <field name="groups" eval="[(4,ref('gym_base.group_gym_account'))]" />
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="1"/>
    </record>

</odoo>
