<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="gym_publication_view_tree" model="ir.ui.view">
            <field name="name">gym.publication.view.tree</field>
            <field name="model">gym.publication</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="datetime"/>
                    <field name="partner_id"/>
                    <field name="type"/>
                    <field name="weighing_id"/>
                    <field name="workout_id"/>
                </tree>
            </field>
        </record>

        <record id="gym_publication_view_form" model="ir.ui.view">
            <field name="name">gym.publication.view.form</field>
            <field name="model">gym.publication</field>
            <field name="arch" type="xml">
                <form>
                    <header attrs="{'invisible':[('id','=',False)]}">
                        <button string="Like" name="like" type="object" class="oe_highlight" attrs="{'invisible':[('has_like','=',True)]}"/>
                        <button string="Unlike" name="unlike" type="object" attrs="{'invisible':[('has_like','=',False)]}"/>
                    </header>

                    <sheet>
                        <field name="id" invisible="1"/>
                        <field name="has_like" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="openLikedPartners" type="object" class="oe_stat_button" icon="fa-heart">
                                <field name="liked_partner_count" string="likes" widget="statinfo"/>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}" attrs="{'invisible':[('weighing_id','=',False)]}"/>
                        <div class="oe_title" attrs="{'invisible':[('type','=',False)]}">
                            <h1><field name="title" placeholder="Title"/></h1>
                            <div class="o_row">
                                <field name="club_id" placeholder="Where?" options="{'no_create':True}" attrs="{'invisible':[('type','!=','workout')]}"/>
                            </div>
                        </div>
                        <group>
                            <field name="partner_id" invisible="1"/>
                            <group attrs="{'invisible':[('type','!=',False)]}">
                                <field name="type"/>
                            </group>
                        </group>
                        <group>
                            <group attrs="{'invisible':[('type','!=','weighing'),('weighing_id','=',False)]}">
                                <field name="weighing_id" options="{'no_create':True}"/>
                            </group>
                            <group attrs="{'invisible':[('type','!=','workout'),('workout_id','=',False)]}">
                                <field name="workout_id" options="{'no_create':True}"/>
                            </group>
                            <group attrs="{'invisible':[('type','!=','workout'),('workout_id','=',False)]}">
                                <field name="workout_client_id" invisible="1" />
                                <field name="workout_partner_id" attrs="{'invisible':[('workout_client_id','=',False)]}" widget="res_partner_many2one" context="{'form_view_ref': 'gym_base.res_partner_view_form'}"/>
                            </group>
                        </group>
                        <group>
                            <group attrs="{'invisible':[('weighing_id','=',False)]}"> 
                                <field name="height"/>
                                <field name="weight"/>
                            </group>
                            <field name="measurement_method"/>
                        </group>
                         <group string="Skin Fold" attrs="{'invisible':[('measurement_method','!=','fold')]}">
                            <group>
                                <field name="bicep_skinfold"/>
                                <field name="tricep_skinfold"/>
                                <field name="shoulder_skinfold"/>
                                <field name="subillacres_skinfold"/>
                            </group>
                        </group> 
                        <group string="Impedance Scale" attrs="{'invisible':[('measurement_method','!=','impedance')]}">
                            <group>
                                <field name="body_fat"/>
                                <field name="muscle_mass"/>
                                <field name="bmi"/>
                                <field name="visceral_fat"/>
                                <field name="basal_metabolism"/>
                                <field name="bone_mass"/>
                                <field name="water_percentage"/>
                                <field name="proteins"/>
                            </group>
                        </group>
                        <notebook attrs="{'invisible':[('type','!=','workout')]}">
                            <page name="exercises" string="Exercises" attrs="{'invisible':[('workout_id','!=', False)]}">
                                <field name="publication_exercise_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="set_str"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="exercises" string="Exercises" attrs="{'invisible':[('workout_id','=', False)]}">
                                <field name="workout_exercise_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="set_str"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <field name="comment_ids">
                        <tree editable="top">
                            <field name="datetime" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="message"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="gym_publication_view_kanban" model="ir.ui.view">
            <field name="name">gym.publication.view.kanban</field>
            <field name="model">gym.publication</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors">
                    <field name="title"/>
                    <field name="partner_id"/>
                    <field name="type"/>
                    <field name="club_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_has_icon">
                                <div class="o_project_kanban_main">
                                    <div class="o_kanban_card_content">
                                        <div class="o_kanban_primary_left">
                                            <div class="o_primary">
                                                <span><b><t t-esc="record.title.value"/></b></span>
                                                <span t-if="record.partner_id.value">
                                                    <strong><t t-esc="record.partner_id.value"/></strong>
                                                </span>
                                                <span t-if="record.club_id.value">
                                                    <t t-esc="record.club_id.value"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_project_kanban_boxes">
                                    <a class="o_project_kanban_box" type="edit">
                                        <div>
                                            <span class="o_value"><t t-esc="record.type.value"/></span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    
        <record id="gym_publication_action" model="ir.actions.act_window">
            <field name="name">Publications</field>
            <field name="res_model">gym.publication</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem
            id="gym_publication_menu"
            name="Publications"
            action="gym_publication_action"
            groups="gym_base.group_gym_account"
            parent="gym_base.gym_menu"
            sequence="1"/>

    </data>
    

</odoo>
