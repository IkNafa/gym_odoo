<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="only_edit_my_menus" model="ir.rule">
        <field name="name">only_edit_my_menus</field>
        <field name="model_id" ref="model_gym_menu"/>
        <field name="domain_force">[('partner_id','=',user.partner_id.id)]</field>
        <field name="groups" eval="[(4,ref('gym_base.group_gym_individual'))]" />
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="admin_only_edit_my_menus" model="ir.rule">
        <field name="name">admin_only_edit_my_menus</field>
        <field name="model_id" ref="model_gym_menu"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('base.group_system'))]" />
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="only_edit_my_menu_days" model="ir.rule">
        <field name="name">only_edit_my_menu_days</field>
        <field name="model_id" ref="model_gym_menu_day"/>
        <field name="domain_force">[('menu_id.partner_id','=',user.partner_id.id)]</field>
        <field name="groups" eval="[(4,ref('gym_base.group_gym_individual'))]" />
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="admin_only_edit_my_menu_days" model="ir.rule">
        <field name="name">admin_only_edit_my_menu_days</field>
        <field name="model_id" ref="model_gym_menu_day"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('base.group_system'))]" />
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

</odoo>
