<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="gym_food_view_tree" model="ir.ui.view">
            <field name="name">gym.food.view.tree</field>
            <field name="model">gym.food</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="is_prepared"/>
                    <field name="line_str"/>
                </tree>
            </field>
        </record>

        <record id="gym_food_view_form" model="ir.ui.view">
            <field name="name">gym.food.view.form</field>
            <field name="model">gym.food</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Name"/></h1>
                            <div class="o_row">
                                <field name="brand" placeholder="Brand" attrs="{'invisible':[('is_prepared','=',True)]}"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="type_id" attrs="{'invisible':[('is_prepared','=',True)]}"/>
                                <field name="is_prepared"/>
                            </group>
                            <group>
                                <field name="calories"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="ingredients" string="Ingredients" attrs="{'invisible':[('is_prepared','=',False)]}">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="food_id"/>
                                        <field name="quantity"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="nutritional_information" string="Nutritional Information">
                                <group>
                                    <group string="Fats">
                                        <field name="fats" attrs="{'readonly':[('is_prepared','=',True)]}"/>
                                        <field name="saturated_fats" attrs="{'readonly':[('is_prepared','=',True)]}"/>
                                    </group>
                                    <group string="Carbohydrates">
                                        <field name="carbohydrates" attrs="{'readonly':[('is_prepared','=',True)]}"/>
                                        <field name="sugars" attrs="{'readonly':[('is_prepared','=',True)]}"/>
                                    </group>
                                    <group string="Dietary Fiber" attrs="{'readonly':[('is_prepared','=',True)]}">
                                        <field name="dietary_fiber" attrs="{'readonly':[('is_prepared','=',True)]}"/>
                                    </group>
                                    <group string="Proteins" attrs="{'readonly':[('is_prepared','=',True)]}">
                                        <field name="proteins" attrs="{'readonly':[('is_prepared','=',True)]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="gym_food_view_search" model="ir.ui.view">
            <field name="name">gym.food.view.search</field>
            <field name="model">gym.food</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter name="is_prepared" string="Is Prepared" domain="[('is_prepared','=',True)]"/>
                </search>
            </field>
        </record>

        <record id="gym_food_action" model="ir.actions.act_window">
            <field name="name">Foods</field>
            <field name="res_model">gym.food</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="gym_food_menu"
            name="Foods"
            action="gym_food_action"
            parent="nutrition_root_menu"
            sequence="10"/>
    
    </data>
    

</odoo>
