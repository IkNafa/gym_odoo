<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="only_my_products" model="ir.rule">
        <field name="name">only_my_products</field>
        <field name="model_id" ref="model_gym_product"/>
        <field name="domain_force">[('shop_id','=',user.partner_id.id)]</field>
        <field name="groups" eval="[(4,ref('gym_base.group_gym_shop'))]" />
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="admin_products" model="ir.rule">
        <field name="name">admin_products</field>
        <field name="model_id" ref="model_gym_product"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('base.group_system'))]" />
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

</odoo>
