<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="gym_product_view_form" model="ir.ui.view">
            <field name="name">gym.product.view.form</field>
            <field name="model">gym.product</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                            <div class="o_row">
                                <field name="shop_id" readonly="1" widget="res_partner_many2one" context="{'form_view_ref': 'gym_base.res_partner_view_form'}"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="price"/>
                            </group>
                            <group>
                                <field name="url" widget="url"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="gym_product_view_kanban" model="ir.ui.view">
            <field name="name">gym.product.view.kanban</field>
            <field name="model">gym.product</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="image_small"/>
                    <field name="price"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('gym.product', 'image_small', record.id.raw_value)" alt="Product"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong><br/>
                                    <small t-if="record.shop_id.value"><field name="shop_id"/></small>
                                    <div name="tags"/>
                                        <ul>
                                            <li>Price: <field name="price"/></li>
                                        </ul>
                                    <div/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="gym_product_view_search" model="ir.ui.view">
            <field name="name">gym.product.view.search</field>
            <field name="model">gym.product</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
    
        <record id="gym_product_action" model="ir.actions.act_window">
            <field name="name">Shop</field>
            <field name="res_model">gym.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
        </record>

        <menuitem
            id="shop_menu"
            name="Shop"
            action="gym_product_action"
            groups="gym_base.group_gym_account"
            parent="gym_base.gym_menu"
            sequence="60"/>

    </data>
    

</odoo>
